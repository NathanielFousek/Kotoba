<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ndf333.nathaniel.kotoba">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".LaunchScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DictionaryActivity"
            android:label="Kotoba Dictionary"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".DetailedEntryActivity"
            android:label="Kotoba" />
        <activity
            android:name=".DetailedSentenceActivity"
            android:label="Kotoba" />
        <activity
            android:name=".ViewDecksActivity"
            android:label="My Decks" />
        <activity android:name=".EditDeckActivity" />
        <activity android:name=".StudyActivity" />
        <activity android:name=".ShowExamplesActivity" />
        <activity android:name=".QuizActivity"/>
    </application>

</manifest>